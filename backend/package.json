{
  "name": "backend",
  "version": "1.0.0",
  "description": "Express + TypeScript API for the UMak eBallot platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:cluster": "ts-node-dev --respawn --transpile-only src/server-cluster.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/src/server.js",
    "start:cluster": "node dist/src/server-cluster.js",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:load": "node load-tests/simple-load-test.js",
    "test:load:quick": "TEST_DURATION=10 CONCURRENT_USERS=5 node load-tests/simple-load-test.js",
    "test:load:peak": "TEST_DURATION=30 CONCURRENT_USERS=50 node load-tests/simple-load-test.js",
    "test:load:stress": "TEST_DURATION=60 CONCURRENT_USERS=200 node load-tests/simple-load-test.js",
    "generate:token": "node generate-test-token.js",
    "get:token": "node get-real-token.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@supabase/supabase-js": "^2.78.0",
    "@types/nodemailer": "^7.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.10",
    "supertest": "^7.1.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.9.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}

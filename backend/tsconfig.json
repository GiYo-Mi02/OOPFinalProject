{
  "compilerOptions": {
  "target": "ES2021",
  "module": "CommonJS",
  "lib": ["ES2021"],
    "rootDir": ".",
    "outDir": "dist",
  "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "noEmitOnError": false,
  "ignoreDeprecations": "5.0"
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
